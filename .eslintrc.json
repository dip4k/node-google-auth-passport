{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true,
    "mocha": true
  },
  "extends": ["prettier", "standard", "prettier/standard", "plugin:prettier/recommended"],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "plugins": ["prettier", "standard"],
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "windows"],
    "semi": ["error", "always"],
    "no-unused-vars": "warn",
    "array-element-newline": ["error", "never"],
    "curly": ["error", "all"],
    "no-mixed-operators": "error",
    "eol-last": ["error", "always"],
    "quotes": [
      "warn",
      "single",
      {
        "allowTemplateLiterals": true
      }
    ],
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "printWidth": 100,
        "tabWidth": 2,
        "arrowParens": "always"
      }
    ],
    "no-param-reassign": [
      "warn",
      {
        "props": false
      }
    ],
    "prefer-arrow-callback": "warn",
    "no-multi-assign": "warn",
    "consistent-return": "warn"
  }
}
